<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/textview_transparent_borderbottom"
            android:layout_marginBottom="60dp">
            <ImageView
                android:id="@+id/ivBack_LPC"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_arrow_back_ios_24" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:paddingLeft="45dp"
                android:text="THAY ĐỔI MẬT KHẨU"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:gravity="center_vertical"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mật khẩu cũ"
                android:paddingLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/txtMatkhaucu_LPC"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:drawableRight="@drawable/eye_hide"
                android:background="@drawable/edittext_border_tenant_setting"
                android:paddingLeft="35dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nhập mật khẩu mới"
                android:paddingLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtMatkhaumoi1_LPC"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_border_tenant_setting"
                android:paddingLeft="35dp"
                android:inputType="textPassword"
                android:drawableRight="@drawable/eye_hide"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nhập lại mật khẩu mới"
                android:paddingLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtMatkhaumoi2_LPC"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_border_tenant_setting"
                android:paddingLeft="35dp"
                android:inputType="textPassword"
                android:drawableRight="@drawable/eye_hide"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnLuu_LPC"
                android:layout_width="150dp"
                app:backgroundTint="@null"
                android:background="@drawable/button_luu_tenant_border"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_height="40dp"
                android:text="Lưu" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>