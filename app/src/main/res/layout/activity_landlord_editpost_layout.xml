<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:weightSum="24">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="12">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <TextView
            style="@style/MinhText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center"
            android:text="SỬA BÀI ĐĂNG"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageButton

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

    </LinearLayout>


    <!--Tieu de-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="12">

        <TextView
            style="@style/MinhText"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="Tiêu đề bài viết" />

        <EditText
            android:id="@+id/ed_landlord_edit_post_housename"
            style="@style/MinhEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="9"
            android:inputType="textMultiLine" />

    </LinearLayout>

    <!--Dia chi-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="12">

        <TextView
            style="@style/MinhText"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="Địa chỉ nơi cho thuê" />

        <EditText
            android:id="@+id/ed_landlord_edit_post_address"
            style="@style/MinhEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="9"
            android:inputType="textMultiLine" />

    </LinearLayout>


    <!--bo 4 thong tin SDT, Dien tich, Gia, Trang thai-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"

        android:weightSum="12">

        <!--So dien thoai-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="3"

            android:orientation="horizontal"
            android:weightSum="12">

            <TextView
                style="@style/MinhText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="SDT" />

            <EditText
                style="@style/MinhEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/ed_landlord_edit_post_number"
                android:layout_marginStart="20dp"
                android:layout_weight="10" />
        </LinearLayout>

        <!--Dien tich-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="12">

            <TextView
                style="@style/MinhText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Diện tích" />

            <EditText
                style="@style/MinhEditText"
                android:layout_width="0dp"
                android:id="@+id/ed_landlord_edit_post_area"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_weight="10" />

        </LinearLayout>
        <!--Giá-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="12">

            <TextView
                style="@style/MinhText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Giá" />

            <EditText
                style="@style/MinhEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/ed_landlord_edit_post_price"
                android:layout_marginStart="20dp"
                android:layout_weight="10" />

        </LinearLayout>
        <!--Trang thai-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="12">

            <TextView
                style="@style/MinhText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="Trạng thái phòng" />

            <Spinner

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_weight="8"
                android:background="@color/white"
                android:gravity="center"
                android:textAlignment="center" />

        </LinearLayout>


    </LinearLayout>


    <!--Mô tả-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="12">

        <TextView
            style="@style/MinhText"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="Mô tả"
            tools:ignore="NestedWeights" />

        <EditText
            style="@style/MinhEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="9"
            android:inputType="textMultiLine" />

    </LinearLayout>

    <!--ảnh-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="24">

        <ImageView
            android:id="@+id/img_landlord_edit_post_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@drawable/ic_add_photo"
            tools:ignore="NestedWeights" />

        <ImageView
            android:id="@+id/img_landlord_edit_post_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_weight="7"
            android:visibility="gone"
            android:background="@drawable/ic_add_photo" />

        <ImageView
            android:id="@+id/img_landlord_edit_post_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_weight="7"
            android:visibility="gone"
            android:background="@drawable/ic_add_photo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="12">

        <Button
            android:id="@+id/btn_landlord_edit_post_push"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="Xác nhận sửa"
            app:backgroundTint="@null"
            android:background="@drawable/shape_btn_landlord_editpost"
            tools:ignore="NestedWeights" />

        <Button
            android:id="@+id/btn_landlord_edit_post_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="Hủy thay đổi"

            android:background="@drawable/button_luu_tenant_border"
            app:backgroundTint="@null"
            />
    </LinearLayout>

</LinearLayout>