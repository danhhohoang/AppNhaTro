<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/textview_transparent_borderbottom"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivBack_LSP"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_baseline_arrow_back_ios_24" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CẬP NHẬT THÔNG TIN"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingLeft="45dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivImage_LSP"
            android:layout_marginLeft="25dp"
            android:layout_width="100dp"
            android:src="@drawable/ic_user"
            android:layout_height="100dp"/>
            <Button
                android:id="@+id/btnSelectImg_LSP"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:textSize="10dp"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="15dp"
                app:backgroundTint="@null"
                android:textStyle="bold"
                android:background="@drawable/button_updateavt_tenant"
                android:textColor="@color/black"
                android:text="Cập nhật avatar"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Họ tên:"
            android:paddingLeft="35dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/txtHoten_LSP"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="35dp"
            android:paddingBottom="10dp"
            android:textColor="@color/white"
            android:hint="Danh"
            android:background="@drawable/textview_transparent_borderbottom"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CMND:"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="35dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/txtCMND_LSP"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="35dp"
            android:textColor="@color/white"
            android:hint="214214251"
            android:background="@drawable/textview_transparent_borderbottom"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="35dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/txtEmail_LSP"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="35dp"
            android:textColor="@color/white"
            android:hint="acb123@gmail.com"
            android:background="@drawable/textview_transparent_borderbottom"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại:"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="35dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/txtSDT_LSP"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="35dp"
            android:textColor="@color/white"
            android:hint="0987654321"
            android:background="@drawable/textview_transparent_borderbottom"
            android:layout_marginBottom="50dp"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btnLuu_LSP"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_luu_tenant_border"
            app:backgroundTint="@null"
            android:text="Lưu" />
    </LinearLayout>
    </LinearLayout>
</ScrollView>