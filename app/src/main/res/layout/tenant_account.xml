<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_24" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="40dp">
        <!--Thêm vào thư viện CircleImageView: compile 'de.hdodenhof:circleimageview:2.1.0'-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivAccount"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/white"
            android:src="@drawable/ic_user"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:text="Tên Account"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:paddingTop="3dp"
                android:text="ID Account"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnPhongdaluu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_phongdaluu"
            android:text="   Phòng đã lưu "
            android:gravity=""
            android:layout_marginLeft="-4dp"
            android:layout_marginBottom="-1dp"
            android:layout_marginRight="-4dp"
            app:backgroundTint="@null"
            android:textColor="@color/black"
            android:background="@drawable/textview_borderbottom"
            android:textStyle="bold"
            android:paddingLeft="40dp"/>
        <Button
            android:id="@+id/btnBaidang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_post"
            android:text="   Bài đăng"
            android:gravity=""
            app:backgroundTint="@null"
            android:textColor="@color/black"
            android:layout_marginLeft="-4dp"
            android:layout_marginBottom="-1.1dp"
            android:layout_marginRight="-4dp"
            android:background="@drawable/textview_borderbottom"
            android:textStyle="bold"
            android:paddingLeft="40dp"/>
        <Button
            android:id="@+id/btnDieukhoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-4dp"
            android:layout_marginBottom="-1.1dp"
            android:layout_marginRight="-4dp"
            app:backgroundTint="@null"
            android:textColor="@color/black"
            android:background="@drawable/textview_borderbottom"
            android:text="   Điều khoản"
            android:drawableLeft="@drawable/ic_dieukhoan"
            android:gravity=""
            android:textStyle="bold"
            android:paddingLeft="40dp"/>
        <Button
            android:id="@+id/btnCaidat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-4dp"
            android:layout_marginBottom="-1.1dp"
            android:layout_marginRight="-4dp"
            app:backgroundTint="@null"
            android:textColor="@color/black"
            android:background="@drawable/textview_borderbottom"
            android:drawableLeft="@drawable/ic_gear"
            android:text="   Cài đặt"
            android:gravity=""
            android:textStyle="bold"
            android:paddingLeft="40dp"/>
        <Button
            android:id="@+id/btnLienhe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-4dp"
            android:layout_marginBottom="-1.1dp"
            android:layout_marginRight="-4dp"
            android:drawableLeft="@drawable/ic_contact"
            android:text="   Liên hệ"
            app:backgroundTint="@null"
            android:textColor="@color/black"
            android:gravity=""
            android:background="@drawable/textview_borderbottom"
            android:textStyle="bold"
            android:paddingLeft="40dp"/>
        <Button
            android:id="@+id/btnDangxuat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-4dp"
            android:layout_marginBottom="-1.1dp"
            android:layout_marginRight="-4dp"
            app:backgroundTint="@null"
            android:textColor="@color/black"
            android:background="@drawable/textview_borderbottom"
            android:drawableLeft="@drawable/ic_logout"
            android:text="    Đăng xuất"
            android:gravity=""
            android:textStyle="bold"
            android:paddingLeft="40dp"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>