<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rcv_HomeLanLord_Item"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgUserItemComment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/ic_user" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/star"/>
                <TextView
                    android:id="@+id/tvRatingItemLandLord"
                    android:layout_width="0dp"
                    android:text="5"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/tvSLRatingItemLandLord"
                    android:layout_width="0dp"
                    android:text="Lượt đánh giá"
                    android:layout_height="match_parent"
                    android:layout_weight="3" />
                <TextView
                    android:id="@+id/tvDateItemRatingLandLord"
                    android:layout_width="0dp"
                    android:text="Ngày tháng năm"
                    android:gravity="right"
                    android:layout_height="match_parent"
                    android:layout_weight="5" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvCommentItemLandLord"
                android:gravity="left|center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Comment"
                android:layout_weight="6" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>