<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        style="@style/al_Lineartop_change"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_rcBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_back1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:paddingLeft="37dp"
            android:text="Nhập mật khẩu mới"
            android:textSize="11pt"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        style="@style/al_Linearmid_change"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            android:layout_weight="2"
            android:src="@drawable/ic_user"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="90dp"
            android:layout_weight="6"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:weightSum="10">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_create_new_password"
                    android:layout_weight="9"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="10pt"
                    android:layout_weight="1"
                    android:text="Tạo password mới"
                    android:textStyle="bold"/>
            </LinearLayout>

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:background="@drawable/txt_background_login"
            android:hint="Nhập email"
            android:paddingLeft="20dp"/>
            <EditText
                android:id="@+id/txtMatKhauMoi"
                android:inputType="textPassword"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:background="@drawable/txt_background_login"
                android:hint="Mật khẩu mới"
                android:paddingRight="10dp"
                android:drawableRight="@drawable/ic_show_pass"
                android:paddingLeft="20dp"/>
        <EditText
            android:id="@+id/txtNhapLaiMatKhauMoi"
            android:inputType="textPassword"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/txt_background_login"
            android:layout_weight="1.5"
            android:paddingRight="10dp"
            android:drawableRight="@drawable/ic_show_pass"
            android:hint="Nhập lại mật khẩu"
            android:paddingLeft="20dp"/>
            <Button
                android:id="@+id/btnLuuMatKhauMoi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:background="@drawable/btn_login"
                app:backgroundTint="@null"
                android:layout_margin="20dp"
                android:text="Thay đổi"
               />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>