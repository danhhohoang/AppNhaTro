<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_reportback"
                android:layout_marginTop="12dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_back1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:text="REPORT"
                android:textColor="@color/white"
                android:textSize="11pt"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="                                     "/>

        </LinearLayout>

        <TextView
            style="@style/TextBooking"
            android:text="@string/t_n_b_i_ng" />

        <EditText
            android:id="@+id/txtTenBaiDang"
            android:textSize="15sp"
            style="@style/edittextBooking"
            android:enabled="false"/>

        <TextView
            style="@style/TextBooking"
            android:text="@string/id_ng_i_ng" />

        <EditText
            android:id="@+id/txtidnguoidang"
            style="@style/edittextBooking"
            android:enabled="false"/>

        <TextView
            style="@style/TextBooking"
            android:text="ID bài đăng" />

        <EditText
            android:id="@+id/txtIDbaidang"
            style="@style/edittextBooking"
            android:enabled="false"/>

        <TextView
            style="@style/TextBooking"
            android:text="@string/t_n_ng_i_g_i" />

        <EditText
            android:id="@+id/txtSenderIsName"
            style="@style/edittextBooking"
            android:enabled="false"/>

        <TextView
            style="@style/TextBooking"
            android:text="@string/ti_u" />

        <EditText
            android:id="@+id/txtTitle"
            style="@style/edittextBooking"/>

        <TextView
            style="@style/TextBooking"
            android:text="@string/n_i_dung_report" />

        <EditText
            android:id="@+id/txtContentReport"
            android:layout_weight="6"
            style="@style/edittextBooking"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/btnHuy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="@drawable/btn_red"
                android:text="@string/h_y_b"
                app:backgroundTint="@null"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btngui"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                app:backgroundTint="@null"
                android:background="@drawable/btn_blu"
                android:text="Gửi" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>