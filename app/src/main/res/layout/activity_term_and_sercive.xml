<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:weightSum="24"
    tools:context=".Activity.TermAndSerciveActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_TermAndSerVice_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_back1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center"
            android:text="CHÍNH SÁCH VÀ QUYỀN LỢI"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />


    </LinearLayout>

    <!--    BIG Edit Text-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="19"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_Term_and_Service"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_term_and_service_textview"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textSize="16sp" />
    </LinearLayout>

    <!--    button submit-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_TermAndSerVice_Submit"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:background="@drawable/shape_button_term_and_service"
            android:text="SỬA"
            android:visibility="visible"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn_TermAndSerVice_Cancel"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_luu_tenant_border"
            android:text="hủy"
            android:visibility="visible"
            app:backgroundTint="@null" />
    </LinearLayout>


</LinearLayout>