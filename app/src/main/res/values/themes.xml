<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppNhaTro" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TextBooking" parent="">
        <!-- Primary brand color. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center|left</item>
        <!-- Secondary brand color. -->
        <item name="android:layout_weight">1.5</item>
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="edittextBooking" parent="">
        <!-- Primary brand color. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <!-- Secondary brand color. -->
        <item name="android:layout_weight">2</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/txt_background_login</item>
    </style>

    <style name="editfillter" parent="">
        <!-- Primary brand color. -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <!-- Secondary brand color. -->
        <item name="android:layout_weight">2</item>
        <item name="android:gravity"></item>
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="Theme.AppNhaTro.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.AppNhaTro.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.AppNhaTro.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="edittextAddNewPost" parent="">
        <!-- Primary brand color. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/txt_background_login</item>
    </style>

    <style name="TextAddNewPostLandLord" parent="">
        <!-- Primary brand color. -->
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|left</item>
        <!-- Secondary brand color. -->
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="edittextAddNewPostLandLord" parent="">
        <!-- Primary brand color. -->
        <item name="android:gravity">top</item>
        <item name="android:paddingLeft">20dp</item>
        <!-- Secondary brand color. -->
        <item name="android:background">@drawable/txt_background_login</item>
    </style>

    <style name="MinhText" parent="">
        <item name="android:gravity">center|left</item>
        <!-- Secondary brand color. -->
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="MinhTextTitle" parent="">
        <item name="android:gravity">center|left</item>
        <!-- Secondary brand color. -->
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
    </style>
    <style name="MinhEditText" parent="">

    </style>
</resources>